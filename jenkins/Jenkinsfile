pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:2-alpine'
                }
            }
            steps {
                sh 'python -m py_compile sources/add2vals.py sources/calc.py'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'pypi/pytest-allure-adaptor'
                }
            }
            steps {
                sh 'pytest --verbose --junit-xml test-reports/results.xml sources/test_calc.py'
                sh 'pytest sources/test_allure.py'
            }
            post {
                always {
                  sh 'echo end'
                }
            }
        }

    }
}
